<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/row_transparent_ripple_effect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Element"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_rank"
        style="@style/Element"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="48dp"
        android:text="#1"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_kills"
        style="@style/Element"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="48dp"
        android:text="0 Kills"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_game_mode"
        style="@style/Element"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/oval_rounded_corners_red"
        android:gravity="right"
        android:paddingBottom="2dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="solo-fpp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_winner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:src="@mipmap/ic_chicken_dinner"
        android:visibility="invisible" />

    <View
        android:id="@+id/v_separator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="92dp"
        android:background="@color/colorPrimaryDark" />

</FrameLayout>