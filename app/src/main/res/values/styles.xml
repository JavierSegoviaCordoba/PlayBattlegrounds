<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Element">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="IntroTitle">
        <item name="android:text">@string/intro_title</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="IntroSubtitle" parent="Element">
        <item name="android:text">@string/intro_subtitle</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="Button" parent="Element">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IntroSendButton" parent="Button">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:text">@string/accept</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
